<?xml version="1.0"?>

<robot name="line_maze_solver" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <link name="chassis">
        <visual>
            <origin xyz="0.0 0.0 0.0"/>
            <material name="grey">
                <color rgba="0.5 0.5 0.5 1"/>
            </material>
            <geometry>
                <box size="0.15 0.15 0.05"/> 
            </geometry>
        </visual>
        
    </link>


    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.03" length="0.02"/>
            </geometry>
                <origin xyz="0 -0.085 0" rpy=" 1.57 0.0 0.0" />
                <material name="black">
                    <color rgba="0 0 0 1"/>
                    
                </material>
        </visual>

    </link>


    <link name="left_wheel">
        <visual>
            <origin xyz="0 0.085 0" rpy=" 1.57 0.0 0.0" />
            <geometry>
                <cylinder radius="0.03" length="0.02"/>
            </geometry>
                <material name="black">
                    <color rgba="0 0 0 1"/>
                    
                </material>
        </visual>

    </link>

    <link name="castor_wheel">
        <visual>
            <origin xyz="0 0 0" />
                <geometry>
                    <sphere radius="0.01"/>
                </geometry>
                <material name="red">
                    <color rgba="1 0 0 1"/> 
                </material>
        </visual>

    </link>

    <xacro:property name="sensor_x" value="0.040"/>

    <xacro:macro name="ir_sensors" params="name y">
        <link name="${name}">
            <visual>
                <origin xyz="${sensor_x} ${y} -0.01" />
                <geometry>
                    <box size="0.01 0.01 0.01"/>
                </geometry>
                <material name="pink">
                    <color rgba="1 0.5 0.5 1"/>
                </material>
            </visual>
            
        </link>

        <joint name="${name}_joint" type="fixed">
            <parent link="chassis"/>
            <child link="${name}"/>
            <origin xyz="${sensor_x} ${y} -0.01" />
        </joint>

    </xacro:macro>


    <xacro:ir_sensors name="ir_lout"  y="0.035" />
    <xacro:ir_sensors name="ir_rout" y="-0.035" />
    <xacro:ir_sensors name="ir_rin"  y="-0.0175" />
    <xacro:ir_sensors name="ir_lin"  y="0.0175" />
    <xacro:ir_sensors name="ir_centre" y="0" />

    <!-- joint ahead -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="chassis"/>
        <child link="left_wheel"/>
        <origin xyz="-0.05 0 -0.01" />
        <axis xyz="0 1 0"/> 
    </joint>

     <joint name="right_wheel_joint" type="continuous">
        <parent link="chassis"/>
        <child link="right_wheel"/>
        <origin xyz="-0.05 0 -0.01" />
        <axis xyz="0 1 0"/> 
    </joint>

    <joint name="castor_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="castor_wheel"/>
        <origin xyz="0.050 0 -0.025" /> 
    </joint>
    
</robot>