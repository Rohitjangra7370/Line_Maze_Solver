<?xml version="1.0"?>

<robot name="line_maze_solver" xmlns:xacro="http://www.ros.org/wiki/xacro">


    <xacro:include filename="camera.xacro"/>
    


    <link name="chassis">
        <visual>
            <origin xyz="0.0 0.0 0.0"/>
            <material name="grey">
                <color rgba="0.5 0.5 0.5 1"/>
            </material>
            <geometry>
                <box size="0.15 0.15 0.05"/> 
            </geometry>
        </visual>
        <inertial>
            <mass value="3.0"/>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
        </inertial>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <box size="0.15 0.15 0.05"/>
            </geometry>
        </collision>
        
        <gazebo reference="chassis">
            <material>Gazebo/Grey</material>
            <selfCollide>true</selfCollide>
        </gazebo>
        
    </link>


    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.03" length="0.02"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0.0 0.0" />
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03" length="0.02"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0.0 0.0" />
        </collision>
        <inertial>
            <mass value="0.001"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
        </inertial>
        <gazebo reference="right_wheel">
            <material>Gazebo/Black</material>
            <selfCollide>true</selfCollide>
            <mu1>1.0</mu1>
            <mu2>1.0</mu2>
        </gazebo>

    </link>


    <link name="left_wheel">
        <visual>
            <origin xyz="0 0 0" rpy=" 1.57 0.0 0.0" />
            <geometry>
                <cylinder radius="0.03" length="0.02"/>
            </geometry>
                <material name="black">
                    <color rgba="0 0 0 1"/>
                    
                </material>
        </visual>
               <collision>
            <geometry>
                <cylinder radius="0.03" length="0.02"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0.0 0.0" />
        </collision>
        <inertial>
            <mass value="0.001"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
        </inertial>
        <gazebo reference="left_wheel">
            <material>Gazebo/Black</material>
            <selfCollide>true</selfCollide>
            <mu1>1.0</mu1>
            <mu2>1.0</mu2>
        </gazebo>

    </link>

    <link name="castor_wheel">
        <visual>
            <origin xyz="0 0 0" />
                <geometry>
                    <sphere radius="0.01"/>
                </geometry>
                <material name="red">
                    <color rgba="1 0 0 1"/> 
                </material>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.01"/>
                <origin xyz="0.0 0.0 0.0" />
            </geometry>
        </collision>
        <inertial>
            <mass value="0.01"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.00001" ixy="0.0" ixz="0.0" iyy="0.00001" iyz="0.0" izz="0.00001"/>
        </inertial>

        <gazebo reference="castor_wheel">
            <material>Gazebo/Red</material>
            <mu1>0.001</mu1>  <!-- Static friction -->
            <mu2>0.001</mu2>  <!-- Dynamic friction -->
            <kp>1000000.0</kp>  <!-- Contact stiffness -->
            <kd>100.0</kd>     <!-- Contact damping -->
        </gazebo>


    </link>

    <!-- joint ahead -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="chassis"/>
        <child link="left_wheel"/>
        <origin xyz="-0.055 0.085 -0.005" />
        <axis xyz="0 1 0"/> 
    </joint>

     <joint name="right_wheel_joint" type="continuous">
        <parent link="chassis"/>
        <child link="right_wheel"/>
        <origin xyz="-0.055 -0.085 -0.005" />
        <axis xyz="0 1 0"/> 
    </joint>

    <joint name="castor_wheel_joint" type="continuous">
        <parent link="chassis"/>
        <child link="castor_wheel"/>
        <origin xyz="0.050 0 -0.025" />
        <axis xyz="0 1 0"/> 
    </joint>



    <!-- ROBOT MOVEMENT STUFF AHEAD  -->

    <gazebo>
        <plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so" >
            <ros>
                <remapping>cmd_vel:=cmd_vel</remapping>
            </ros>
            <left_joint>left_wheel_joint</left_joint>
            <right_joint>right_wheel_joint</right_joint>
            <wheel_separation>0.17</wheel_separation>
            <wheel_diameter>0.06</wheel_diameter>
            <publish_odom>true</publish_odom>
            <odom_frame>odom</odom_frame>
            <robot_base_frame>chassis</robot_base_frame>
        </plugin>
    </gazebo>

</robot>