<?xml version="1.0"?>

<robot name="line_maze_solver" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <link name="chassis">
        <visual>
            <origin xyz="0.0 0.0 0.0"/>
            <material name="grey">
                <color rgba="0.5 0.5 0.5 1"/>
            </material>
            <geometry>
                <box size="0.15 0.15 0.05"/> 
            </geometry>
        </visual>
        <inertial>
            <mass value="1.0"/>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
        </inertial>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <box size="0.15 0.15 0.05"/>
            </geometry>
        </collision>
        
        <gazebo reference="chassis">
            <material>Gazebo/Grey</material>
            <selfCollide>true</selfCollide>
            <mu1>0.5</mu1>
            <mu2>0.5</mu2>
        </gazebo>
        
    </link>


    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.03" length="0.02"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0.0 0.0" />
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03" length="0.02"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0.0 0.0" />
        </collision>
        <inertial>
            <mass value="0.05"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
        </inertial>
        <gazebo reference="right_wheel">
            <material>Gazebo/Black</material>
            <selfCollide>true</selfCollide>
            <mu1>1.0</mu1>
            <mu2>1.0</mu2>
        </gazebo>

    </link>


    <link name="left_wheel">
        <visual>
            <origin xyz="0 0 0" rpy=" 1.57 0.0 0.0" />
            <geometry>
                <cylinder radius="0.03" length="0.02"/>
            </geometry>
                <material name="black">
                    <color rgba="0 0 0 1"/>
                    
                </material>
        </visual>
               <collision>
            <geometry>
                <cylinder radius="0.03" length="0.02"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0.0 0.0" />
        </collision>
        <inertial>
            <mass value="0.05"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
        </inertial>
        <gazebo reference="left_wheel">
            <material>Gazebo/Black</material>
            <selfCollide>true</selfCollide>
            <mu1>1.0</mu1>
            <mu2>1.0</mu2>
        </gazebo>

    </link>

    <link name="castor_wheel">
        <visual>
            <origin xyz="0 0 0" />
                <geometry>
                    <sphere radius="0.01"/>
                </geometry>
                <material name="red">
                    <color rgba="1 0 0 1"/> 
                </material>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.01"/>
                <origin xyz="0.0 0.0 0.0" />
            </geometry>
        </collision>
        <inertial>
            <mass value="0.01"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.00001" ixy="0.0" ixz="0.0" iyy="0.00001" iyz="0.0" izz="0.00001"/>
        </inertial>

    </link>

    <xacro:property name="sensor_x" value="0.040"/>

    <xacro:macro name="ir_sensors" params="name y">  <!-- Keep this line -->
        <link name="${name}">
            <visual>
                <origin xyz="${sensor_x} ${y} -0.01" />
                <geometry>
                    <box size="0.01 0.01 0.01"/>
                </geometry>
                <material name="pink">
                    <color rgba="1 0.5 0.5 1"/>
                </material>
            </visual>
        </link>

        <joint name="${name}_joint" type="fixed">
            <parent link="chassis"/>
            <child link="${name}"/>
            <origin xyz="${sensor_x} ${y} -0.01" />
        </joint>
    </xacro:macro>


    <xacro:ir_sensors name="ir_lout"  y="0.035" />
    <xacro:ir_sensors name="ir_rout" y="-0.035" />
    <xacro:ir_sensors name="ir_rin"  y="-0.0175" />
    <xacro:ir_sensors name="ir_lin"  y="0.0175" />
    <xacro:ir_sensors name="ir_centre" y="0" />

    <!-- joint ahead -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="chassis"/>
        <child link="left_wheel"/>
        <origin xyz="-0.05 0.085 -0.01" />
        <axis xyz="0 1 0"/> 
    </joint>

     <joint name="right_wheel_joint" type="continuous">
        <parent link="chassis"/>
        <child link="right_wheel"/>
        <origin xyz="-0.05 -0.085 -0.01" />
        <axis xyz="0 1 0"/> 
    </joint>

    <joint name="castor_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="castor_wheel"/>
        <origin xyz="0.050 0 -0.025" /> 
    </joint>

</robot>